module compile

imports
  
  signatures/scheme-sig
  pp
  
imports
  stc-common
  
imports
  codegen/-
  desugar/-

rules
  
  compile-run:
    (node, _, _, path, project-path) -> (filename, result)
    with
      filename := <guarantee-extension(|"stc")> path
    ; result   := <eval-framevm-stacy> <compile-to-fvm> <desugar> node
    
  compile:
    (node, _, _, path, project-path) -> (filename, result)
    with
      filename := <guarantee-extension(|"stc")> path
    ; result   := <pp-framevm-stacy> <compile-to-fvm> <desugar> node
